<ui:UiPage
    x:Class="Hakuu.Windows.Pages.Server.Plugins"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hakuu.Windows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Plugins"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowDrop="True"
    mc:Ignorable="d">
    <DockPanel>
        <GroupBox Header="插件列表  PS: 右键即可看到菜单">
            <ListView Name="PluginsListview" ContextMenuOpening="PluginsListview_ContextMenuOpening">
                <ListView.ContextMenu>
                    <ContextMenu Name="PluginsContextMenu">
                        <ui:MenuItem
                            Name="Import"
                            Click="MenuItem_Click"
                            Header="导入"
                            SymbolIcon="DocumentAdd24"
                            Tag="Import" />
                        <ui:MenuItem
                            Name="Delete"
                            Click="MenuItem_Click"
                            Header="删除"
                            SymbolIcon="Delete24"
                            Tag="Delete" />
                        <Separator />
                        <ui:MenuItem
                            Name="Enable"
                            Click="MenuItem_Click"
                            Header="启用"
                            SymbolIcon="CheckmarkCircle24"
                            Tag="Enable" />
                        <ui:MenuItem
                            Name="Disable"
                            Click="MenuItem_Click"
                            Header="禁用"
                            SymbolIcon="DismissCircle24"
                            Tag="Disable" />
                        <Separator />
                        <ui:MenuItem
                            Name="OpenFolder"
                            Click="MenuItem_Click"
                            Header="打开文件夹"
                            SymbolIcon="FolderOpen24"
                            Tag="OpenFolder" />
                        <Separator />
                        <ui:MenuItem
                            Name="Refresh"
                            Click="MenuItem_Click"
                            Header="刷新"
                            SymbolIcon="ArrowClockwise24" 
                            Tag="Refresh"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </GroupBox>
        
    </DockPanel>
</ui:UiPage>