<ui:UiPage
    x:Class="Hakuu.Windows.Pages.Server.Container"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Hakuu.Windows.Pages.Server"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="850"
    d:DesignWidth="800"
    AllowDrop="True"
    mc:Ignorable="d">
    <Grid Grid.Row="1" Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:NavigationCompact
            x:Name="Navigation"
            Grid.Column="0"
            Margin="6,0,6,0"
            Frame="{Binding ElementName=RootFrame}"
            SelectedPageIndex="0">
            <ui:NavigationCompact.Items>
                <ui:NavigationItem
                    x:Name="PanelNavigationItem"
                    Content="控制面板"
                    Icon="PanelRight24"
                    PageTag="panel"
                    PageType="{x:Type pages:Panel}" />
                <ui:NavigationItem
                    x:Name="PluginManagerNavigationItem"
                    Content="插件管理"
                    Icon="PuzzlePiece24"
                    PageTag="plugins"
                    PageType="{x:Type pages:Plugins}" />
                <ui:NavigationItem
                    x:Name="DownloadServerNavigationItem"
                    Content="服务端下载"
                    Icon="ArrowDownload24"
                    PageTag="download"
                    PageType="{x:Type pages:Download}" />
                <ui:NavigationItem
                    x:Name="MinecraftProperties"
                    Content="设置"
                    Icon="Settings24"
                    PageTag="properties"
                    PageType="{x:Type pages:Properties}" />
                <ui:NavigationItem
                    x:Name="PlayerList"
                    Content="玩家列表"
                    Icon="People24"
                    PageTag="playerlist"
                    PageType="{x:Type pages:PlayerList}" />
                <!--<ui:NavigationItem
                    x:Name="Usage"
                    Content="服务端占用"
                    Icon="DataUsage24"
                    PageTag="usage"
                    PageType="{x:Type pages:Usage}" />-->
            </ui:NavigationCompact.Items>
                
        </ui:NavigationCompact>
        <Border
            Grid.Column="1"
            Margin="0"
            Padding="10,5"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <Frame x:Name="RootFrame" />
        </Border>
    </Grid>
</ui:UiPage>