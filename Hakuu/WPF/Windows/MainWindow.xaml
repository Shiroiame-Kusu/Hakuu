<ui:UiWindow
    x:Class="Hakuu.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:debug_page="clr-namespace:Hakuu.Windows.Pages"
    xmlns:function_pages="clr-namespace:Hakuu.Windows.Pages.Function"
    xmlns:home_page="clr-namespace:Hakuu.Windows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:server_pages="clr-namespace:Hakuu.Windows.Pages.Server"
    xmlns:settings_pages="clr-namespace:Hakuu.Windows.Pages.Settings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Hakuu"
    Width="900"
    Height="520"
    MaxWidth="{StaticResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}"
    MaxHeight="{StaticResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}"
    AllowDrop="True"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Closing="UiWindow_Closing"
    Drop="UiWindow_Drop"
    ContentRendered="UiWindow_ContentRendered"
    ExtendsContentIntoTitleBar="True"
    Icon="/Windows/Hakuu.ico"
    IsVisibleChanged="UiWindow_IsVisibleChanged"
    Loaded="UiWindow_Loaded"
    StateChanged="UiWindow_StateChanged"
    Style="{StaticResource UiWindow}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ui:TitleBar
                x:Name="_TitleBar"
                Title="Hakuu"
                Grid.Row="0"
                Margin="5,0,0,0"
                Padding="0"
                Icon="/Windows/Hakuu.ico">
                <ui:TitleBar.Tray>
                    <ui:NotifyIcon
                        x:Name="NotifyIcon"
                        FocusOnLeftClick="True"
                        Icon="/Windows/Hakuu.ico"
                        MenuOnRightClick="True"
                        TooltipText="Hakuu">
                        <ui:NotifyIcon.Menu>
                            <ContextMenu>
                                <ui:MenuItem
                                    Click="Hide_Click"
                                    Header="隐藏窗口"
                                    SymbolIcon="SlideHide24" />
                                <ui:MenuItem
                                    Click="Help_Click"
                                    Header="帮助"
                                    SymbolIcon="SearchInfo24" />
                                <ui:MenuItem
                                    Click="Exit_Click"
                                    Header="退出"
                                    SymbolIcon="ArrowExit20" />
                            </ContextMenu>
                        </ui:NotifyIcon.Menu>
                    </ui:NotifyIcon>
                </ui:TitleBar.Tray>
            </ui:TitleBar>
            <Grid Grid.Row="1" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:NavigationStore
                    x:Name="Navigation"
                    Grid.Column="0"
                    Margin="6,0,6,0"
                    Frame="{Binding ElementName=RootFrame}"
                    SelectedPageIndex="0">
                    <ui:NavigationStore.Items>
                        <ui:NavigationItem
                            Content="开始"
                            Icon="Home24"
                            PageTag="home"
                            PageType="{x:Type home_page:Home}" />
                        <ui:NavigationSeparator />
                        <ui:NavigationItem
                            Content="服务器"
                            x:Name="ServerNavigationItem"
                            Icon="Server24"
                            PageTag="server"
                            PageType="{x:Type server_pages:Container}" />
                        <ui:NavigationItem
                            x:Name="FunctionNavigationItem"
                            Content="功能"
                            Icon="Box24"
                            PageTag="functions"
                            PageType="{x:Type function_pages:Container}" />
                    </ui:NavigationStore.Items>
                    <ui:NavigationStore.Footer>
                        <ui:NavigationItem
                            x:Name="SettingsNavigationItem"
                            Content="设置"
                            Icon="Settings24"
                            PageType="{x:Type settings_pages:Container}" />
                    </ui:NavigationStore.Footer>
                </ui:NavigationStore>
                <Border
                    Grid.Column="1"
                    Margin="0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8,0,0,0">
                    <Frame x:Name="RootFrame" Margin="4,8" />
                </Border>
            </Grid>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:Snackbar
                x:Name="Snackbar"
                Grid.Column="1"
                Panel.ZIndex="999"
                Timeout="5000" />
        </Grid>
        <ui:Dialog>
            <Grid>
                <StackPanel>
                    <TextBlock
                        Margin="0,5,0,0"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="ID" />
                    <ui:TextBox
                        x:Name="MemberEditor_ID"
                        Margin="0,0,0,10"
                        Icon="VideoPerson24" />
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="游戏ID" />
                    <ui:TextBox
                        x:Name="MemberEditor_GameID"
                        Margin="0,0,0,5"
                        Icon="SlideText24" />
                </StackPanel>
            </Grid>
        </ui:Dialog>
        <ui:Dialog>
            <Grid>
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="0,5,0,0"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="作用域" />
                        <CheckBox
                            Name="RegexEditor_IsAdmain"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Right"
                            Content="需要管理权限" />
                    </Grid>
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="正则" />
                    <ui:TextBox
                        x:Name="RegexEditor_Regex"
                        Margin="0,0,0,5"
                        Icon="CodeText20" />
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="命令" />
                    <ui:TextBox
                        x:Name="RegexEditor_Command"
                        Margin="0,0,0,5"
                        Icon="KeyCommand24" />
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="备注" />
                    <ui:TextBox
                        x:Name="RegexEditor_Remark"
                        Margin="0,0,0,5"
                        Icon="Pen24" />
                </StackPanel>
            </Grid>
        </ui:Dialog>
        <ui:Dialog
            x:Name="ScheduleEditor"
            Title="任务编辑器"
            ButtonLeftClick="ScheduleEditor_ButtonLeftClick"
            ButtonLeftName="确定"
            ButtonRightClick="ScheduleEditor_ButtonRightClick"
            ButtonRightName="取消"
            DialogHeight="355"
            DialogWidth="325">
            <Grid>
                <StackPanel Margin="0,5">
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="Cron表达式" />
                    <ui:TextBox
                        x:Name="ScheduleEditor_Cron"
                        Margin="0,0,0,5"
                        Icon="CodeText20"
                        TextChanged="ScheduleEditor_Cron_TextChanged" />
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="命令" />
                    <ui:TextBox
                        x:Name="ScheduleEditor_Command"
                        Margin="0,0,0,5"
                        Icon="KeyCommand24" />
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="备注" />
                    <ui:TextBox
                        x:Name="ScheduleEditor_Remark"
                        Margin="0,0,0,15"
                        Icon="Pen24" />
                    <TextBlock
                        Name="ScheduleEditor_NextTime"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="-"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </ui:Dialog>
        <ui:Dialog>
            <Grid>
                <DockPanel Margin="0,5">
                    <TextBlock
                        DockPanel.Dock="Top"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="命令" />
                    <ui:TextBox
                        x:Name="EventEditor_Command"
                        DockPanel.Dock="Bottom"
                        Icon="KeyCommand24" />
                </DockPanel>
            </Grid>
        </ui:Dialog>
    </Grid>
</ui:UiWindow>