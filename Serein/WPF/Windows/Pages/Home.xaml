<ui:UiPage
    x:Class="Serein.Windows.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Serein.Windows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Home"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowDrop="True"
    Scrollable="True"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="5,10"
            FontSize="20"
            Text="Serein" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="DockPanel">
                    <Setter Property="Margin" Value="0,0,0,5" />
                </Style>
            </Grid.Resources>
            <ui:Card
                Grid.Column="0"
                Margin="5"
                VerticalContentAlignment="Stretch">
                <ui:Card.Footer>
                    <TextBlock Text="服务器信息" />
                </ui:Card.Footer>
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="状态" />
                        <TextBlock
                            Name="Server_Status"
                            DockPanel.Dock="Right"
                            Text="未启动"
                            TextAlignment="Right" />
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="在线人数" />
                        <TextBlock
                            Name="Server_Online"
                            DockPanel.Dock="Right"
                            Text="- / -"
                            TextAlignment="Right" />
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="进程占用" />
                        <TextBlock
                            Name="Server_Occupancy"
                            DockPanel.Dock="Right"
                            Text="-"
                            TextAlignment="Right" />
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="运行时长" />
                        <TextBlock
                            Name="Server_Time"
                            DockPanel.Dock="Right"
                            Text="-"
                            TextAlignment="Right" />
                    </DockPanel>
                </StackPanel>
            </ui:Card>
            <ui:Card
                Grid.Column="1"
                Margin="5"
                VerticalContentAlignment="Stretch">
                <ui:Card.Footer>
                    <TextBlock Text="CPU" />
                </ui:Card.Footer>
                <StackPanel>
                    <ProgressBar
                        Name="CPU_Percent_Bar"
                        Margin="0,5,0,7"
                        IsIndeterminate="True"
                        Value="20" />
                    <TextBlock
                        Name="CPU_Percent"
                        HorizontalAlignment="Right"
                        Text="-%"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="CPU_Name"
                        Height="40"
                        Margin="0,10,0,0"
                        Text="未知的CPU"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ui:Card>
            <ui:Card
                Grid.Column="2"
                Margin="5"
                VerticalContentAlignment="Stretch">
                <ui:Card.Footer>
                    <TextBlock Text="内存使用" />
                </ui:Card.Footer>
                <StackPanel>
                    <ui:ProgressRing x:Name="RAM_Percent_Ring" Progress="0" />
                    <TextBlock
                        x:Name="RAM_Percent"
                        Margin="0,7"
                        Text="- / - GB    -%"
                        TextAlignment="Center" />
                </StackPanel>
            </ui:Card>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ui:CardAction
                Margin="5"
                Click="CardAction_Click"
                Icon="Server24"
                Tag="Server">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="启动服务器" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="一键启动服务器进程" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="1"
                Margin="5"
                Click="CardAction_Click"
                Icon="WindowConsole20"
                Tag="Console">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="服务器终端" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="查看服务器终端" />
                </StackPanel>
            </ui:CardAction>
            
            <ui:CardAction
                Grid.Row="1"
                Margin="5"
                Click="CardAction_Click"
                Icon="Timer24"
                Tag="Schedule">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="管理定时任务" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="定时执行指定任务命令" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Click="CardAction_Click"
                Icon="PlugConnected24"
                Tag="Plugins">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="服务器插件" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="查看服务器插件" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Click="CardAction_Click"
                Icon="Settings24"
                Tag="ServerSettings">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="设置" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="修改服务器设置" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Click="CardAction_Click"
                Icon="Settings24"
                Tag="Settings">
                <StackPanel>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="设置" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="修改Serein的设置" />
                </StackPanel>
            </ui:CardAction>
            <ui:Anchor
                Grid.Row="2"
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Center"
                Content="查看官网页面"
                Icon="Link24"
                NavigateUri="https://serein.cc" />
        </Grid>
    </StackPanel>
</ui:UiPage>
